<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.lab6networkfx.controller.InputUserController"
            prefHeight="400.0" prefWidth="600.0">
  <children>
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
      <Label text="Input User Data"/>
      <HBox alignment="CENTER" spacing="10.0">
        <Label text="First Name:"/>
        <TextField fx:id="firstNameField"/>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
        <Label text="Last Name:"/>
        <TextField fx:id="lastNameField"/>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
        <Label text="Username:"/>
        <TextField fx:id="usernameField"/>
      </HBox>
      <Button fx:id="btnAdd" onAction="#handleClicks" text="Add"/>
      <Button fx:id="btnExit" onAction="#handleClicks" text="Cancel"/>
    </VBox>
  </children>
</AnchorPane>
