<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: #535556;" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.lab6networkfx.controller.InputUserController">
  <children>
    <VBox style="-fx-background-color: #535556;" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
      <Label styleClass="label-style" text="Input User Data" />
      <HBox alignment="CENTER" spacing="10.0">
        <Label styleClass="label-style" text="First Name:" />
        <TextField fx:id="firstNameField" />
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
        <Label styleClass="label-style" text="Last Name:" />
        <TextField fx:id="lastNameField" />
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
        <Label styleClass="label-style" text="Username:" />
        <TextField fx:id="usernameField" />
      </HBox>
      <HBox alignment="CENTER" prefHeight="53.0" prefWidth="607.0" spacing="10.0">
        <Button fx:id="btnAdd" onAction="#handleClicks" style="-fx-text-fill: black;" text="Add" />
        <Button fx:id="btnExit" onAction="#handleClicks" style="-fx-text-fill: black;" text="Cancel" />
      </HBox>
    </VBox>
  </children>
</AnchorPane>
