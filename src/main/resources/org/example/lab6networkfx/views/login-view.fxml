<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.lab6networkfx.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
            <Label text="Login" />
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Username:" />
                <TextField fx:id="txtUsername" />
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Password:" />
                <PasswordField fx:id="txtPassword" />
            </HBox>
            <HBox alignment="CENTER" prefHeight="53.0" prefWidth="607.0" spacing="10.0">
                <Button fx:id="btnLogin" onAction="#handleLogin" style="-fx-text-fill: black;" text="Login" />
                <Button fx:id="btnSignup" onAction="#handleSignup" style="-fx-text-fill: black;" text="Register" />
                <Button fx:id="btnCancel" onAction="#handleCancel" style="-fx-text-fill: black;" text="Exit" />
            </HBox>
        </VBox>
    </children>


</AnchorPane>
