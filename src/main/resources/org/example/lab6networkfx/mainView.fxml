<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.lab6networkfx.controller.MainController">
  <children>
    <HBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

      <!-- First Panel: Choice between Users or Friendships -->
      <AnchorPane style="-fx-background-color: #3c3c3c;" HBox.hgrow="ALWAYS">
        <VBox alignment="TOP_LEFT" prefHeight="400" style="-fx-padding: 10;" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
          <HBox alignment="CENTER" style="-fx-padding: 10; -fx-font-weight: bold;">
            <Label text="Options" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
          </HBox>
          <VBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 10;">
            <Label text="Choose:"/>
            <RadioButton text="Users" fx:id="usersRadioButton"/>
            <RadioButton text="Friendships" fx:id="friendshipsRadioButton"/>
          </VBox>
        </VBox>
      </AnchorPane>

      <!-- Second Panel: Table View -->
      <AnchorPane style="-fx-background-color: #535556;" HBox.hgrow="ALWAYS" minHeight="200" minWidth="320">
        <VBox alignment="TOP_CENTER" prefHeight="400" style="-fx-padding: 10;" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
          <HBox fx:id="tableHeader" alignment="CENTER" style="-fx-padding: 10; -fx-font-weight: bold;">
            <Label text="Table" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
          </HBox>
          <StackPane alignment="CENTER" VBox.vgrow="ALWAYS">
            <Label fx:id="noTableLabel" text="No table selected" style="-fx-font-size: 18px; -fx-text-fill: grey;" />
          </StackPane>
          <VBox fx:id="tablePanel" alignment="TOP_CENTER" style="-fx-padding: 10;">
            <TableView fx:id="userTableView" prefWidth="320" prefHeight="350">
              <columns>
                <TableColumn fx:id="tableUserID" prefWidth="50" text="ID"/>
                <TableColumn fx:id="tableFirstName" prefWidth="100" text="First Name"/>
                <TableColumn fx:id="tableLastName" prefWidth="100" text="Last Name"/>
                <TableColumn fx:id="tableUsername" prefWidth="100" text="Username"/>
              </columns>
            </TableView>
            <TableView fx:id="friendshipTableView" prefWidth="320" prefHeight="350">
              <columns>
                <TableColumn fx:id="tableFriendshipUser1" prefWidth="107" text="1st User"/>
                <TableColumn fx:id="tableFriendshipUser2" prefWidth="107" text="2nd User"/>
                <TableColumn fx:id="tableFriendshipDate" prefWidth="106" text="Since Date"/>
              </columns>
            </TableView>
          </VBox>
        </VBox>
      </AnchorPane>

      <!-- Third Panel: Add and Delete Buttons -->
      <AnchorPane style="-fx-background-color: #535556;" HBox.hgrow="ALWAYS">
        <VBox alignment="TOP_CENTER" prefHeight="400" style="-fx-padding: 10;" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
          <HBox alignment="CENTER" style="-fx-padding: 10; -fx-font-weight: bold;">
            <Label text="Actions" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
          </HBox>
          <VBox alignment="TOP_CENTER" spacing="10" prefWidth="50" styleClass="button-panel">
            <Button fx:id="btnAdd">
              <graphic>
                <ImageView fitWidth="24" fitHeight="24">
                  <image>
                    <Image url="@/org/example/lab6networkfx/images/add.png"/>
                  </image>
                </ImageView>
              </graphic>
            </Button>
            <Button fx:id="btnDelete">
              <graphic>
                <ImageView fitWidth="24" fitHeight="24">
                  <image>
                    <Image url="@/org/example/lab6networkfx/images/minus.png"/>
                  </image>
                </ImageView>
              </graphic>
            </Button>
          </VBox>
        </VBox>
      </AnchorPane>
    </HBox>
  </children>
</AnchorPane>