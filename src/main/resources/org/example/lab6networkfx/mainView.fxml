<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.lab6networkfx.controller.MainController">
  <children>
    <HBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

      <!-- First Panel: Choice between Users or Friendships -->
      <AnchorPane style="-fx-background-color: #3c3c3c;" HBox.hgrow="ALWAYS">
        <VBox alignment="TOP_LEFT" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
          <HBox alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Options" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
          </HBox>
          <VBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 10;">
            <Label text="Choose:"/>
            <RadioButton text="Users" fx:id="usersRadioButton"/>
            <RadioButton text="Friendships" fx:id="friendshipsRadioButton"/>
          </VBox>
        </VBox>
      </AnchorPane>

      <!-- Second Panel: Table View -->
      <AnchorPane style="-fx-background-color: #535556;" HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER" prefHeight="400.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
          <Label fx:id="noTableLabel" text="No table selected" style="-fx-font-size: 18px; -fx-text-fill: grey; -fx-padding: 10;" />
          <VBox fx:id="tablePanel" alignment="TOP_CENTER" style="-fx-padding: 10;" visible="false" managed="false">
            <TableView fx:id="tableView" prefWidth="280" prefHeight="350">
              <columns>
                <TableColumn text="Column 1" />
                <TableColumn text="Column 2" />
              </columns>
            </TableView>
          </VBox>
        </VBox>
      </AnchorPane>

      <!-- Third Panel: Add and Delete Buttons -->
      <AnchorPane style="-fx-background-color: #535556;" HBox.hgrow="ALWAYS">
        <VBox alignment="TOP_CENTER" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
          <HBox alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Actions" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
          </HBox>
          <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 10;">
            <Button fx:id="btnAdd">
              <graphic>
                <ImageView fitWidth="24" fitHeight="24">
                  <image>
                    <Image url="@/org/example/lab6networkfx/images/add.png"/>
                  </image>
                </ImageView>
              </graphic>
            </Button>
            <Button fx:id="btnDelete">
              <graphic>
                <ImageView fitWidth="24" fitHeight="24">
                  <image>
                    <Image url="@/org/example/lab6networkfx/images/minus.png"/>
                  </image>
                </ImageView>
              </graphic>
            </Button>
          </VBox>
        </VBox>
      </AnchorPane>
    </HBox>
  </children>
</AnchorPane>